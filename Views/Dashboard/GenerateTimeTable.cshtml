@using ExamTimeTable.ViewModels
@model ExamGenerationViewModel

@{
    ViewData["Title"] = "Generate Exam Timetable";
}

<div class="container py-4">
    <h3 class="fw-bold mb-4 text-primary">
        <i class="bi bi-tools me-2"></i> Generate Exam Timetable
    </h3>

    <!-- Status Alert -->
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info d-flex align-items-center" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i>
            <span>@ViewBag.Message</span>
        </div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <span>@ViewBag.Error</span>
        </div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.Success))
    {
        <div class="alert alert-success d-flex align-items-center" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            <span>@ViewBag.Success</span>
        </div>
    }

    <!-- Info Card -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">
                <i class="bi bi-calendar-range me-2"></i> Exam Scheduling Overview
            </h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">⏳ Exam period: 3 weeks (excluding weekends)</li>
                <li class="list-group-item">📆 Shifts: Morning (9:00 AM – 12:00 PM), Afternoon (2:00 PM – 5:00 PM)</li>
                <li class="list-group-item">🧠 Based on: Course Units grouped by Year (HEAC, Year 1, 2, 3)</li>
                <li class="list-group-item">🏫 Rooms and Invigilators are assigned automatically based on availability</li>
            </ul>
        </div>
    </div>

    <!-- Generate Button -->
    <form asp-action="GenerateTimetable" method="post">
        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-success shadow-sm px-4">
                <i class="bi bi-lightning-charge-fill me-1"></i> Generate Timetable Now
            </button>
        </div>
    </form>
</div>
