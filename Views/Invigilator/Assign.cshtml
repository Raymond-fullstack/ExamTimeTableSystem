@using ExamTimeTable.ViewModels
@model InvigilatorAssignViewModel

@{
    ViewData["Title"] = "Assign Invigilator";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i> Assign Invigilator</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Assign">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="SelectedUserId" class="form-label fw-semibold">Select Invigilator</label>
                            <select asp-for="SelectedUserId" asp-items="Model.AvailableInvigilators" class="form-select">
                                <option value="">Choose Invigilator  </option>
                            </select>
                            <span asp-validation-for="SelectedUserId" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle-fill me-1"></i> Assign
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
