@model Room

@{
    ViewData["Title"] = "Create Room";
}

<div class="form-container shadow p-4 bg-white rounded">
    <h1 class="h4 text-primary mb-3"><i class="bi bi-door-open"></i>Create Room</h1>
    <hr class="mb-4" />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Room Code -->
        <div class="form-group mb-3">
            <label asp-for="Code" class="form-label fw-semibold"></label>
            <input asp-for="Code" class="form-control shadow-sm" placeholder="Enter room code" />
            <span asp-validation-for="Code" class="text-danger small"></span>
        </div>

        <!-- Room Block -->
        <div class="form-group mb-3">
            <label asp-for="Block" class="form-label fw-semibold"></label>
            <select asp-for="Block" class="form-control shadow-sm" placeholder="Enter building block">
                <option value=""> Choose A Block</option>
                <option value="Main Building">Main Building</option>
                <option value="Education Block(EDU)">EDU Block</option>
                <option value="Agriculture Block">Agriculture Block </option>
                <option value="Chemistry Block">Chemistry Block</option>
                <option value="Library">Library</option>
                <option value="Dining Hall">DH</option>
                <option value="Anglican Block">Anglican Block</option>
            </select>
            <span asp-validation-for="Block" class="text-danger small"></span>
        </div>

        <!-- Room Capacity-->
        <div class="form-group mb-3">
            <label asp-for="Capacity" class="form-label fw-semibold"></label>
            <input asp-for="Capacity" class="form-control shadow-sm" placeholder="Enter room capacity" />
            <span asp-validation-for="Capacity" class="text-danger small"></span>
        </div>

        <!-- Submit and Back Buttons -->
        <div class="form-group mt-4 d-flex justify-content-start">
            <input type="submit" value="Create" class="btn btn-success px-4 me-2" />
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
