@page
@model ExamTimeTable.Areas.Identity.Pages.Account.LogoutConfirmationModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Logged Out";
}

<div class="text-center">
    <img src="~/images/goodbye1-tp.png" alt="Busitema Logo" class="mb-3" style="max-width: 100px;" />

    <h2 class="text-success fw-bold"><i class="bi bi-box-arrow-left me-2"></i> You’ve been logged out</h2>

    <p class="mt-3">Thank you for using the system. You may log in again below.</p>

    <a asp-page="/Account/Login" class="btn btn-primary mt-4">
        <i class="bi bi-box-arrow-in-right"></i> Back to Login
    </a>
</div>
