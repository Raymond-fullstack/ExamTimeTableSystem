@page
@model ForgotPasswordConfirmation
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Reset Link Sent";
}

<div class="text-center mb-4">
    <h4 class="text-primary mt-3">Reset Link Sent</h4>
    <p class="text-muted">Please check your university email inbox.</p>
</div>

<div class="alert alert-info text-center">
    <i class="bi bi-envelope-at-fill me-2"></i>
    If an account exists for the email you entered, a password reset link has been sent.
</div>

<div class="text-center mt-4">
    <a asp-page="/Account/Login" class="btn btn-outline-primary">
        <i class="bi bi-box-arrow-in-left"></i> Back to Login
    </a>
</div>
