@page
@model ForgotPasswordModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Forgot Password";
}

<div class="text-center mb-4">
    <h4 class="text-primary mt-2">Reset Your Password</h4>
    <p class="text-muted">Enter your Busitema University email and we'll send you a reset link.</p>
</div>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Input.Email" class="form-label">
            <i class="bi bi-envelope"></i> Email Address
        </label>
        <input asp-for="Input.Email" class="form-control" placeholder="name@busitema.ac.ug" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">
        <i class="bi bi-key-fill me-1"></i> Send Reset Link
    </button>

    <div class="mt-3 text-center small">
        <a asp-page="./Login" class="text-decoration-none text-muted">
            <i class="bi bi-arrow-left"></i> Back to Login
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
